<div class="container mt-4">
  <h1>Add a New Expense</h1>

  <%= form_with(model: @expense, url: category_expenses_path(@category), local: true, class: 'mt-4') do |form| %>
    <div class="form-group">
      <%= form.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>

    <div class="form-group">
      <%= form.number_field :amount, class: 'form-control', placeholder: 'Amount' %>
    </div>

    <div class="form-group">
      <%= form.collection_select :category_id, @categories, :id, :name, { value: @category.id }, class: 'form-control', placeholder: 'Select a Category' %>
    </div>

    <div>
      <%= form.submit "Save", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
