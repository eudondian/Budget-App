<div class="container mt-4">
  <h1 class="mb-4">Add a New Category</h1>

  <%= form_with(model: @category, url: categories_path, local: true, class: 'mb-4') do |form| %>
    <div class="form-group">
      <%= form.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>

    <div class="form-group">
      <%= form.text_field :icon, class: 'form-control', placeholder: 'Icon' %>
    </div>

    <%= form.submit 'Create category', class: 'btn btn-primary' %>

    <%= link_to 'Back', categories_path, class: 'btn btn-secondary ml-2' %>
  <% end %>
</div>
