<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="nav-header">
<div class="form-group">
      <%= f.submit "next", class: 'btn btn-primary' %>
    </div>
<h2 class="text-white">REGISTER </h2>
<p class="bck"><%= link_to raw('&#8592;'), categories_path %></p>
</div>

  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container mt-4">
    <div class="form-group">
      <%= f.text_field :full_name, autofocus: true, class: 'form-control custom-input', placeholder: 'Full Name' %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control custom-input', placeholder: 'Email' %>
    </div>
    <div class="form-group">
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control custom-input', placeholder: 'Password' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control custom-input', placeholder: 'Confirm Password' %>
    </div>
    
  </div>
<% end %>
